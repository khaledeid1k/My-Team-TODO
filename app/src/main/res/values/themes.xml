<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Splash Screen-->
        <item name="android:windowSplashscreenContent" tools:targetApi="s">@drawable/splash_logo</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="TextStyle.LabelMedium">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/selector_button</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="paddingStart">@dimen/spacing_medium</item>
        <item name="paddingEnd">@dimen/spacing_tiny</item>
        <item name="backgroundTint">@color/on_primary</item>
    </style>

    <style name="EditText.Search">
        <item name="android:drawableStart">@drawable/ic_magnifer</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>

    <style name="Chips">
        <item name="chipBackgroundColor">@color/on_primary</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStrokeColor">#14121212</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="background">@drawable/selector_chip</item>
    </style>


</resources>