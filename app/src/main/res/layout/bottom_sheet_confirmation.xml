<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_bottom_sheet_confirmation"
    android:padding="@dimen/spacing_medium">

    <View
    android:layout_width="32dp"
    android:layout_height="4dp"
    android:layout_gravity="center"
    android:background="@drawable/drag_handle"
    android:layout_marginTop="@dimen/spacing_medium"/>

    <ImageView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_confierm"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/done"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/spacing_giant"
        android:fontFamily="@font/lato"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/on_background_87"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/it_well_be_added_to_tasks"
        android:fontFamily="@font/lato"
        android:layout_marginTop="@dimen/spacing_small"
        android:textAlignment="center"
        android:textColor="@color/on_primary_container_38"/>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:background="@drawable/background_submit_button"
        android:fontFamily="@font/lato"
        android:textSize="@dimen/text_medium"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:textColor="@color/on_primary"
        android:layout_marginTop="@dimen/spacing_giant"/>
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:background="@drawable/background_cancel_button"
        android:fontFamily="@font/lato"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/on_primary_container_87"
        app:backgroundTint="@null"
        android:layout_marginTop="@dimen/spacing_small"/>


</LinearLayout>